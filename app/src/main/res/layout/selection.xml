<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/veryhappy"
        tools:context=".fragments.Selection"
        android:id="@+id/parent">

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/smiley_veryhappy"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:id="@+id/smiley"/>

    <ImageView android:layout_width="48dp"
               android:layout_height="48dp"
               android:id="@+id/note"
               android:src="@drawable/ic_note_add_black"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:paddingBottom="15dp"
               android:paddingLeft="15dp"
               android:visibility="invisible"/>

    <ImageView android:layout_width="48dp"
               android:layout_height="48dp"
               android:id="@+id/history"
               android:src="@drawable/ic_history_black"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:paddingBottom="15dp"
               android:paddingRight="15dp"
               android:visibility="invisible"/>

    <ImageView android:layout_width="48dp"
               android:layout_height="48dp"
               android:id="@+id/pie"
               android:src="@drawable/ic_pie"
               app:layout_constraintBottom_toTopOf="@id/history"
               app:layout_constraintEnd_toEndOf="parent"
               android:paddingBottom="15dp"
               android:paddingRight="15dp"
               android:visibility="invisible"/>
</androidx.constraintlayout.widget.ConstraintLayout>